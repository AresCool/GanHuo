<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_card"
              android:orientation="vertical"
              android:paddingTop="16dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingBottom="8dp"
              >

    <TextView
        android:id="@+id/tv_home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="布局共享（列如所有ACTIVITY拥有相同的布局部分，比如ACTIONBAR，在BASEACTIVITY中写入布局）"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >


        <TextView
            android:id="@+id/tv_home_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/green"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="Android"
            android:textColor="@color/white"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_home_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_home_item_type"
            android:background="@color/black"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="Github"
            android:textColor="@color/white"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/tv_home_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_author"
            android:drawablePadding="4dp"
            android:text="dasu"
            android:textColor="@color/gray"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_home_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_date"
            android:drawablePadding="4dp"
            android:text="1年前"
            android:textColor="@color/gray"
            android:textSize="13sp"
            />

    </RelativeLayout>

</LinearLayout>