<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.dasu.ganhuo.ui.view.ScaleImageView
        android:id="@+id/iv_category_demo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:origin_height="1"
        app:origin_width="1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_category_demo"
        android:background="@color/transparent"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_category_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_category_title"
            android:textColor="@color/white"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/tv_category_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_category_title"
            android:textColor="@color/white"
            android:textSize="11sp"
            />

    </RelativeLayout>

</RelativeLayout>